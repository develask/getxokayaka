doctype html
html(lang='#{hizkuntza}')
    head
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(charset="utf-8")
        meta(name="google-site-verification" content="jPkbfrfYLuREqrD-jGPGos39CBVjWd9a_uWR0kizVlA")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="description" content="Getxo Kayaka official kayak piragua taldea club")
        - var tags = "";
        if data['tags']
            -each val in data['tags']
                - tags = tags + ", "+val
        meta(name="keywords" content="Piraguismo#{tags}")
        meta(name="author" content="Getxo Kayaka")
        if data["title_"+hizkuntza]
            meta(property="og:title" content='#{data["title_"+hizkuntza]}')
            meta(property="og:description" content='#{data["text_"+hizkuntza]}')
            if data['img']
                meta(property="og:image" content='#{data["img"]}')      
            title GK - #{data["title_"+hizkuntza]}
        else if data["photoset"]
            meta(property="og:description" content='Galeria de Fotos')
            meta(property="og:title" content='#{data["photoset"]["title"]}')
            meta(property="og:image" content='https://farm#{data["photoset"]["photo"][0]["farm"]}.staticflickr.com/#{data["photoset"]["photo"][0]["server"]}/#{data["photoset"]["photo"][0]["id"]}_#{data["photoset"]["photo"][0]["secret"]}_z.jpg')
        else
            title Getxo Kayaka
        link(href="/img/GetxoKayaka.ico" rel="shortcut icon" type="image/x-icon")
        link(href="/css/bootstrap.css" rel="stylesheet")
        link(href="/css/bootstrap-theme.css" rel="stylesheet")
        link(href="/css/sticky-footer-navbar.css" rel="stylesheet")
        link(href="/css/main.css" rel="stylesheet")
