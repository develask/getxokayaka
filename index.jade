        case path.split("/")[1]
            when undefined
            when ""
                if data.bilaketa
                    include ./busqueda/bilaketa.jade
                else
                    include ./inicio.jade
            when "berriak"
                if path.split("/")[2] && path.split("/")[2] != ""
                    include ./noticias/berria.jade
                else
                    include ./noticias/berriak.jade
            when "jarduerak"
                if path.split("/")[2] && path.split("/")[2] != ""
                    include ./actividades/jarduera.jade
                else
                    include ./actividades/jarduerak.jade
            when "galeria"
                if data.id
                    include ./galeria/album.jade
                else
                    include ./galeria/galeria.jade
            when "login"
                include ./login/login.jade
            default
                h1 #{noExiste.error}

